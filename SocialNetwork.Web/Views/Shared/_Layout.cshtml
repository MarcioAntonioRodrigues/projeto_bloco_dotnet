<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <div class="navbar social-menu-bar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img class="logotipo" src="/destrava-logo.png"/>
                @*@Html.ActionLink("destrave", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav options-page">
                    @{
                        if (Session["access_token"] == null)
                        {
                            using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="login-form">
                                    <span>
                                        <label for="username">Username</label>
                                        <input required type="text" name="username" />
                                    </span>
                                    <span>
                                        <label for="password">Senha</label>
                                        <input required type="text" name="password" />
                                    </span>
                                    <input type="submit" value="Log In" class="btn btn-default" />
                                </div>
                            }
                        }
                        else
                        {
                                <li>
                                    @*@Html.ActionLink(ViewBag.UserLoged, "Details", "Profile", null, new { @class = "transparent" })*@
                                    @Html.Encode(User.Identity.Name)
                                </li>
                            <li>
                                <i class="fa fa-home" aria-hidden="true" title="Home">
                                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "transparent" })
                                </i>
                            </li>
                            if (Session["Profile"] != null)
                            {
                                <li>
                                    <i class="fa fa-user" aria-hidden="true" title="Perfil">
                                        @Html.ActionLink("Details", "Details", "Profile", null, new { @class = "transparent" })
                                    </i>
                                </li>
                            }
                            <li>
                                <i class="fa fa-users" aria-hidden="true" title="Lista de usuários">
                                    @Html.ActionLink("FriendsList", "FriendsList", "Profile", null, new { @class = "transparent" })
                                </i>
                            </li>
                            <li>
                                <i class="fa fa-sign-out" aria-hidden="true" title="Sair">
                                    @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "transparent" })
                                </i>
                            </li>
                        }
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year - Destrava.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
