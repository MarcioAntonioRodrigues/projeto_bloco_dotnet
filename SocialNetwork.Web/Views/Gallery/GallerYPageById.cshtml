@model IEnumerable<SocialNetwork.Web.Models.GalleryViewModel>

@{
    ViewBag.Title = "GallerYPageById";
}

<h2>Galeria de imagens</h2>

<table class="table">
   
@if(Model.Count() <= 0)
{
    <p>
        O usuário não possui nenhuma galeria
    </p>
}
else
{
     <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Visitar galeria", "Details", new { id=item.GalleryId })
            </td>
        </tr>
    }

}


</table>
